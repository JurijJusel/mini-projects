<CalculatorLayout>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    ScrollView:
        size_hint_y: 0.5

        Label:
            id: display
            text: ""
            # size_hint_y: 0.5
            font_size: 36
            halign: "right"
            valign: "top"
            # text_size: self.size
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]

    GridLayout:
        cols: 4
        spacing: 5
        size_hint_y: 0.5

        Button:
            text: "-"
            font_size: 32
            color: 1, 0, 0, 1
            background_color: (0, 0.6, 0, 1)
            on_press: root.button_pressed(self)

        Button:
            text: "+"
            font_size: 32
            color: 1, 0, 0, 1
            background_color: (0, 0.6, 0, 1)
            on_press: root.button_pressed(self)

        Button:
            text: "*"
            font_size: 32
            color: 1, 0, 0, 1
            background_color: (0, 0.6, 0, 1)
            on_press: root.button_pressed(self)

        Button:
            text: "/"
            font_size: 32
            color: 1, 0, 0, 1
            background_color: (0, 0.6, 0, 1)
            on_press: root.button_pressed(self)

        Button:
            text: "1"
            font_size: 20
            # background_color: " "
            on_press: root.button_pressed(self)

        Button:
            text: "2"
            font_size: 20
            on_press: root.button_pressed(self)

        Button:
            text: "3"
            font_size: 20
            on_press: root.button_pressed(self)

        Button:
            text: "4"
            font_size: 20
            on_press: root.button_pressed(self)

        Button:
            text: "5"
            font_size: 20
            on_press: root.button_pressed(self)

        Button:
            text: "6"
            font_size: 20
            on_press: root.button_pressed(self)

        Button:
            text: "7"
            font_size: 20
            on_press: root.button_pressed(self)

        Button:
            text: "8"
            font_size: 20
            on_press: root.button_pressed(self)

        Button:
            text: "9"
            font_size: 20
            on_press: root.button_pressed(self)

        Button:
            text: "0"
            font_size: 20
            on_press: root.button_pressed(self)


        Button:
            text: "C"
            font_size: 32
            color: 1, 0, 0, 1
            background_color: (1.0, 0.0, 0.0, 1.0)
            on_press: root.clear_display()

        Button:
            text: "="
            font_size: 32
            color: 1, 0, 0, 1
            background_color: (1.0, 0.0, 0.0, 1.0)
            on_press: root.calculate_result()
